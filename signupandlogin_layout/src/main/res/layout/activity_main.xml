    <TextView
        android:id="@+id/txtOtherSignUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="180dp"
        android:text="Or sign up with social account"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/signupFb"
        android:layout_width="90dp"
        android:layout_height="60dp"
        android:layout_marginBottom="96dp"
        android:background="@drawable/other_sign_up"
        android:src="@drawable/ic_facebook"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"


        app:layout_constraintHorizontal_bias="0.151"
        app:layout_constraintStart_toEndOf="@id/SignUpGg" />

    <ImageButton
        android:id="@+id/SignUpGg"
        android:layout_width="90dp"
        android:layout_height="60dp"
        android:layout_marginStart="104dp"
        android:layout_marginBottom="96dp"
        android:background="@drawable/other_sign_up"
        android:src="@drawable/ic_google"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>