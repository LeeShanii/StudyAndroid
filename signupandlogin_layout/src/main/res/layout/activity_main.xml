<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.appcompat.widget.Toolbar
        app:title=""
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtSignUp"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/nanum_gothic"
        android:text="Sign up"
        android:textColor="#252D32"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar" />

    <com.google.android.material.textfield.TextInputLayout
        android:padding="5dp"
        android:paddingTop="4dp"
        android:paddingBottom="1dp"
        android:background="@drawable/edtsignup"
        android:enabled="true"
        android:id="@+id/txtInPutLayOutName"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:layout_constraintTop_toBottomOf="@id/txtSignUp"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteX="110dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="40dp"
        android:hint="Name"
        android:textColorHint="#AEABAB"
        app:helperTextTextColor="#AEABAB"
        app:errorEnabled="true"
        app:hintTextColor="#AEABAB"


        >

        <EditText
            android:id="@+id/etName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:padding="10dp"
            />
    </com.google.android.material.textfield.TextInputLayout>
    <TextView
        android:id="@+id/txtErrorname"
        android:layout_width="wrap_content"
        android:layout_height="15dp"
        android:layout_marginLeft="50dp"
        android:textColor="#F44336"
        android:textSize="10sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtInPutLayOutName" />
    <ImageView
        android:id="@+id/imageViewname"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginRight="15dp"
        app:layout_constraintBottom_toBottomOf="@+id/txtInPutLayOutName"
        app:layout_constraintEnd_toEndOf="@+id/txtInPutLayOutName"
        app:layout_constraintTop_toTopOf="@+id/txtInPutLayOutName"
        />
    <com.google.android.material.textfield.TextInputLayout
        android:padding="5dp"
        android:paddingBottom="10dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/edtsignup"
        android:enabled="true"
        android:id="@+id/tilEmail"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:layout_constraintTop_toBottomOf="@id/txtInPutLayOutName"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteX="110dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        app:errorEnabled="false"
        app:endIconMode="custom"
        android:hint="Email"
        android:textColorHint="#AEABAB"
        app:helperTextTextColor="#AEABAB"
        >

        <EditText
            android:id="@+id/etEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:padding="10dp" />

    </com.google.android.material.textfield.TextInputLayout>
    <TextView
        android:id="@+id/txtErrorEmail"
        android:layout_width="wrap_content"
        android:layout_height="15dp"
        android:layout_marginLeft="50dp"
        android:textColor="#F44336"
        android:textSize="10sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tilEmail"
        />
    <ImageView
        android:id="@+id/imageViewEmail"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginRight="15dp"
        app:layout_constraintBottom_toBottomOf="@+id/tilEmail"
        app:layout_constraintEnd_toEndOf="@+id/tilEmail"
        app:layout_constraintTop_toTopOf="@+id/tilEmail"
        />

    <com.google.android.material.textfield.TextInputLayout
        android:padding="5dp"
        android:paddingBottom="10dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/edtsignup"
        android:enabled="true"
        android:id="@+id/tilPassword"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:layout_constraintTop_toBottomOf="@id/tilEmail"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteX="110dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        app:errorEnabled="true"
        android:textColorHint="#AEABAB"
        app:helperTextTextColor="#AEABAB"
        android:hint="Password"

        >

        <EditText
            android:id="@+id/etPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:padding="10dp" />

    </com.google.android.material.textfield.TextInputLayout>
    <TextView
        android:id="@+id/txtErrorPassword"
        android:layout_width="wrap_content"
        android:layout_height="15dp"
        android:layout_marginLeft="50dp"
        android:textColor="#F44336"
        android:textSize="10sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tilPassword" />
    <ImageView
        android:id="@+id/imageViewPassword"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginRight="15dp"
        app:layout_constraintBottom_toBottomOf="@+id/tilPassword"
        app:layout_constraintEnd_toEndOf="@+id/tilPassword"
        app:layout_constraintTop_toTopOf="@+id/tilPassword"
        />
    <TextView
        android:id="@+id/haveAccount"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:hint="Already have an account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        app:layout_constraintTop_toBottomOf="@id/tilPassword"
        app:layout_constraintEnd_toEndOf="@+id/right_arrow"/>
    <ImageView

        android:layout_marginRight="20dp"
        android:id="@+id/right_arrow"
        android:layout_marginTop="24dp"
        android:src="@drawable/ic_right_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/haveAccount"
        app:layout_constraintTop_toBottomOf="@+id/tilPassword"
        app:layout_constraintEnd_toEndOf="parent"/>
    <androidx.cardview.widget.CardView
        android:id="@+id/cvSignUp"
        app:cardBackgroundColor="#1B1B1C"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tilPassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="80dp"
        app:cardCornerRadius="28dp"
        app:cardElevation="40dp"
       >

        <Button
            android:id="@+id/btnSignUp"
            android:layout_width="367dp"
            android:layout_height="match_parent"
            android:background="@drawable/btn"
            android:text="Sign up"
            android:textColor="@color/white"
            android:textSize="15sp"

            />
    </androidx.cardview.widget.CardView>

